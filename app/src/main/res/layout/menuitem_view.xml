<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable
            name="menuItem"
            type="com.example.myapplication.domain.entity.MenuItemEntity" />
    </data>

    <com.example.myapplication.presentation.view.MenuItemView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_8dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{menuItem.name}"
            android:textSize="@dimen/text_size_h1"
            tools:text="name" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{menuItem.description}"
            android:textSize="@dimen/text_size_h2"
            tools:text="description" />
    </com.example.myapplication.presentation.view.MenuItemView>
</layout>