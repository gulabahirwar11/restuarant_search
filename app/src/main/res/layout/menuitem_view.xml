<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="menuItem" type="com.example.myapplication.entity.MenuItemEntity"/>
    </data>
    <com.example.myapplication.view.MenuItemView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:text="@{menuItem.name}"
            android:textSize="@dimen/text_size_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="name" />

        <TextView
            android:id="@+id/description"
            android:text="@{menuItem.description}"
            android:textSize="@dimen/text_size_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="description" />
    </com.example.myapplication.view.MenuItemView>
</layout>